{{#page-header}}
  <div class="flex layout-column layout-align-center-center layout-gt-xs-row">
    <h2 class="layout-row layout-align-start-center" >
      {{paper-icon "person"}}
      <span>{{model.person.name}}</span>
    </h2>
    <span class="flex"></span>
  </div>
{{/page-header}}

<md-content class="flex layout-column">
  {{#paper-list}}
    {{#paper-item}}
      <div class="md-list-item-text">
        <h3>Characteristics</h3>
        <ul>
          <li>
            <label>Gender :</label> {{model.person.gender}}
          </li>
          <li>
            <label>Age :</label> {{model.person.age}}
          </li>
          <li>
            <label>Eye color :</label> {{model.person.eye_color}}
          </li>
          <li>
            <label>Hair color :</label> {{model.person.hair_color}}
          </li>
        </ul>
      </div>
    {{/paper-item}}
    {{#if model.locations}}
      {{paper-divider}}
      {{#paper-item}}
        <div class="md-list-item-text">
          <h3>Locations</h3>
        </div>
      {{/paper-item}}
      {{#each model.locations as |location|}}
        {{#paper-item href=(href-to "location" location.id)}}
          <p>
            {{location.name}}
          </p>
        {{/paper-item}}
      {{/each}}
    {{/if}}
    {{#if model.person.films}}
      {{paper-divider}}
      {{#paper-item}}
        <div class="md-list-item-text">
          <h3>Films</h3>
        </div>
      {{/paper-item}}
      {{#each model.person.films as |film|}}
        {{#paper-item href=(href-to "film" film.id)}}
          <p>
            {{film.title}}
          </p>
        {{/paper-item}}
      {{/each}}

    {{/if}}
  {{/paper-list}}
  <!-- spacer -->
  <div class="flex"></div>
  {{github-invite class="md-accent md-hue-2"}}
</md-content>