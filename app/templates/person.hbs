<h2>{{model.person.name}}</h2>
<h3>Characteristics</h3>
<ul>
  <li>
    <label>Gender :</label> {{model.person.gender}}
  </li>
  <li>
    <label>Age :</label> {{model.person.age}}
  </li>
  <li>
    <label>Eye color :</label> {{model.person.eye_color}}
  </li>
  <li>
    <label>Hair color :</label> {{model.person.hair_color}}
  </li>
</ul>
{{#if model.person.films}}
  <h3>Films:</h3>
  {{#each model.person.films as |film|}}
    <h3>
      <a href="/film/{{film.id}}">
        {{film.title}} ({{film.release_date}})
      </a>
    </h3>
  {{/each}}
{{/if}}
{{#if model.locations}}
  <h3>Locations</h3>
  {{#each model.locations as |location|}}
    <h3>
      <a href="/location/{{location.id}}">
        {{location.name}}
      </a>
    </h3>
  {{/each}}
{{/if}}