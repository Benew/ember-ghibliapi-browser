{{#page-header}}
  <h2>
    All films
  </h2>
  <span class="flex"></span>
  {{#paper-button iconButton=true title="Search : TODO"}}
    {{paper-icon "search"}}
  {{/paper-button}}
{{/page-header}}
<md-content class="flex">
  {{#paper-list}}
    {{#each model as |film|}}
      {{#paper-item href=(href-to "film" film.id)}}
        <p>
          {{film.title}}
        </p>
        <div class="md-secondary-container">
          {{film.director}}, {{film.release_date}}
        </div>
      {{/paper-item}}
    {{/each}}
    {{#paper-item class="md-accent md-hue-2"}}
      {{github-invite class="flex"}}
    {{/paper-item}}
  {{/paper-list}}
</md-content>