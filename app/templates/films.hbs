{{#page-header}}
  <h2>
    All films
  </h2>
  <span class="flex"></span>
  {{#paper-button iconButton=true title="Search : TODO"}}
    {{paper-icon "search"}}
  {{/paper-button}}
{{/page-header}}
<md-content class="flex layout-column">
  {{#paper-list}}
    {{#each model as |film|}}
      {{#paper-item href=(href-to "film" film.id) class="md-2-line"}}
        {{paper-icon "movie"}}
        <div class="md-list-item-text">
          <h3>
            {{film.title}}
          </h3>
          <p>
            {{film.director}}, {{film.release_date}}
          </p>
        </div>
      {{/paper-item}}
    {{/each}}
  {{/paper-list}}
  <!-- spacer -->
  <div class="flex"></div>
  {{github-invite class="md-accent md-hue-2"}}
</md-content>