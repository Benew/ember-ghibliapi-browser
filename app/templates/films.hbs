{{#paper-toolbar class="md-accent"}}
  {{#paper-toolbar-tools}}
    <h2>
      All films
    </h2>
    <span class="flex"></span>
    {{#paper-button iconButton=true title="Search : TODO"}}
      {{paper-icon "search"}}
    {{/paper-button}}
  {{/paper-toolbar-tools}}
{{/paper-toolbar}}
<md-content class="flex">
  {{#paper-list}}
    {{#each model as |film|}}
      {{#paper-item href=(href-to "film" film.id)}}
        <p>
          {{film.title}}
        </p>
        <div class="md-secondary-container">
          {{film.director}}, {{film.release_date}}
        </div>
      {{/paper-item}}
    {{/each}}
  {{/paper-list}}
</md-content>